[MAIN]
# Add src directory to Python path for imports
init-hook='import sys; sys.path.insert(0, "src")'

[MESSAGES CONTROL]
# Disable some common warnings that are not relevant for this project
disable=

[FORMAT]
# Maximum line length
max-line-length=100

[DESIGN]
# Maximum number of arguments for function / method
max-args=10

# Maximum number of return statements
max-returns=10

# Maximum number of branches
max-branches=20
